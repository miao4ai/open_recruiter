{
  "appId": "com.openrecruiter.app",
  "productName": "Open Recruiter",
  "directories": {
    "output": "release"
  },
  "files": [
    "electron/dist/**/*"
  ],
  "extraResources": [
    {
      "from": "backend/dist/backend",
      "to": "backend"
    },
    {
      "from": "images",
      "to": "images"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "images/avartar.ico",
    "signAndEditExecutable": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Open Recruiter"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      }
    ],
    "icon": "images/avartar.png",
    "category": "public.app-category.business",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist",
    "notarize": true
  },
  "afterPack": "./electron/afterPack.js",
  "dmg": {
    "title": "${productName} ${version}",
    "iconSize": 80,
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": "AppImage"
  }
}
